{
    "name": "mezzio/mezzio",
    "description": "PSR-7 Middleware Microframework based on Stratigility",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "http",
        "middleware",
        "psr",
        "psr-7",
        "psr-11"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio/",
        "issues": "https://github.com/mezzio/mezzio/issues",
        "source": "https://github.com/mezzio/mezzio",
        "rss": "https://github.com/mezzio/mezzio/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev",
            "dev-develop": "3.0.x-dev"
        },
        "laminas": {
            "config-provider": "Mezzio\\ConfigProvider"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "fig/http-message-util": "^1.1.2",
        "http-interop/http-middleware": "^0.4.1",
        "laminas/laminas-diactoros": "^1.3.10",
        "laminas/laminas-stratigility": "^2.2.0",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio-router": "^2.4.1",
        "mezzio/mezzio-template": "^1.0.4",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "filp/whoops": "^2.1.6 || ^1.1.10",
        "laminas/laminas-coding-standard": "~1.0.0",
        "laminas/laminas-servicemanager": "^3.3 || ^2.7.8",
        "malukenho/docheader": "^0.1.5",
        "mezzio/mezzio-aurarouter": "^2.2",
        "mezzio/mezzio-fastroute": "^2.2",
        "mezzio/mezzio-laminasrouter": "^2.2",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^5.7.23 || ^6.4.3"
    },
    "conflict": {
        "container-interop/container-interop": "<1.2.0"
    },
    "suggest": {
        "aura/di": "^3.2 to make use of Aura.Di dependency injection container",
        "filp/whoops": "^2.1 to use the Whoops error handler",
        "laminas/laminas-servicemanager": "^3.3 to use laminas-servicemanager for dependency injection",
        "mezzio/mezzio-helpers": "^3.0 for its UrlHelper, ServerUrlHelper, and BodyParseMiddleware",
        "mezzio/mezzio-tooling": "For migration and development tools; require it with the --dev flag",
        "xtreamwayz/pimple-container-interop": "^1.0 to use Pimple for dependency injection"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\": "test/"
        },
        "files": [
            "test/class_exists.php"
        ]
    },
    "bin": [
        "bin/mezzio-tooling"
    ],
    "scripts": {
        "check": [
            "@license-check",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "license-check": "docheader check src/ test/"
    },
    "replace": {
        "zendframework/zend-expressive": "self.version"
    }
}
